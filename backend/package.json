{
  "name": "product-metadata-service",
  "version": "1.0.0",
  "description": "A microservice for managing product metadata",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
